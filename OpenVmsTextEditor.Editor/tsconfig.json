    "lib": ["es6", "dom", "scripthost"],
    "stripInternal": true,
    "typeRoots": ["./node_modules/@types"],
    "noUnusedLocals": true,
    "strict": true,
    "target": "es6",
    "module": "es2020",
    "newLine": "lf",
    "allowJs": true,
    "moduleResolution": "node",
	"outDir": "out"
